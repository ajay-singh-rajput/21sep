<%- include('partials/header') %>
<link rel="stylesheet" href="stylesheets/profile.css">
<main>
    <main>
        <div class="allCards">

    <% book.forEach(function(elem){ %>

   
        <div class="card">
        <div class="top">
          <h1 class="titleB"><%= elem.title%></h1>
          <img src="<%= elem.thumbnail%>" alt="" class="btop">
          <div class="bbottom">
          </div>
          <div class="btnD">
            <button class="delete" rou="/delete/<%= elem.title%>"><i class="ri-delete-bin-line"></i>Delete</button>
            <button class="update"><a href="/edit/<%= elem.title%>"><i class="ri-edit-2-fill"></i></i>Update</a></button>
            
          </div>
        </div>
        <div class="bottom">
          <div class="all">
            Author :- <span class="sp"><%= elem.author%></span><br><hr><br>
            Country :- <span class="sp"><%= elem.country%></span><br><hr><br>
            Language :- <span class="sp"><%= elem.language%> </span><br><hr><br>
            Pages :- <span class="sp"><%= elem.pages%></span><br><hr><br>
            Year :- <span class="sp"><%= elem.year%></span><br><br>
          </div>
          
        </div>
      </div>
      <% }) %>
    </div>
